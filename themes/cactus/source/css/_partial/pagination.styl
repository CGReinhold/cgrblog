.pagination
  display: inline-block
  margin-top: 2rem
  width: 100%
  text-align: center

  .page-number
    color: $color-text
    @media (prefers-color-scheme: dark) {
      color: #c9cacc
    }
    font-size: .8rem

  a
    padding: 4px 6px
    border-radius: 5px
    background-image: none
    color: $color-text
    @media (prefers-color-scheme: dark) {
      color: #c9cacc
    }
    text-decoration: none

  a:hover
    background-image: none

  a:hover:not(.active)
    color: $color-accent-2
    @media (prefers-color-scheme: dark) {
      color: #eeeeee
    }
