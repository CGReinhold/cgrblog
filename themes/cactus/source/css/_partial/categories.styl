#categories
  .category-list-title
    color: $color-meta
    @media (prefers-color-scheme: dark) {
      color: #666
    }
  .category-list
    .category-list-item
      .category-list-count
        color: $color-meta
        @media (prefers-color-scheme: dark) {
          color: #666
        }
      .category-list-count:before
        content: " ("
      .category-list-count:after
        content: ")"
