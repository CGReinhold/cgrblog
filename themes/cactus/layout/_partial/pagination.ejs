<% if (page.total > 1) { %>
    <div class="pagination">
        <% if (page.prev) { %>
            <a href="<%- url_for(page.prev_link) %>">&lt;</a>
        <% } %>
        <span class="page-number"><%= __('pagination.page', page.current, page.total) %></span>
        <% if (page.next) { %>
            <a href="<%- url_for(page.next_link) %>">&gt;</a>
        <% } %>
    </div>
<% } %>
